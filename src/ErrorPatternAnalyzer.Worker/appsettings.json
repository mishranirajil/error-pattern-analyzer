{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.Hosting.Lifetime": "Information",
			"Microsoft": "Warning",
			"System": "Warning"
		}
	},
	"NewRelic": {
		"AccountId": "YOUR_ACCOUNT_ID",
		"ApiKey": "NRAK-XXXXXXXXXXXXXXXXXXXX",
		"QueryApiUrl": "https://insights-api.newrelic.com/v1/accounts",
		"PollingIntervalMinutes": 5,
		"MaxErrorsPerPoll": 10000,
		"LookbackMinutes": 15,
		"QueryTimeout": 30,
		"Applications": [
			{
				"Name": "Registration-API",
				"Enabled": true,
				"Repository": "ImagineLearning/registration",
				"GitHubUrl": "https://github.com/ImagineLearning/registration",
				"Team": "Platform Team",
				"SlackChannel": "#platform-errors",
				"MinOccurrencesForAlert": 100,
				"CustomFilters": {
					"IgnoreStatusCodes": [],
					"IgnoreErrorClasses": [],
					"IgnoreMessagePatterns": []
				}
			}
		]
	},
	"MongoDB": {
		"ConnectionString": "mongodb://localhost:27017",
		"DatabaseName": "ErrorPatternAnalyzer"
	},
	"Alerting": {
		"Enabled": true,
		"Slack": {
			"Enabled": true,
			"WebhookUrl": "https://hooks.slack.com/services/YOUR/WEBHOOK/URL",
			"DefaultChannel": "#error-alerts"
		},
		"Email": {
			"Enabled": false,
			"SmtpHost": "smtp.gmail.com",
			"SmtpPort": 587,
			"FromAddress": "alerts@example.com",
			"ToAddresses": ["team@example.com"]
		}
	},
	"Processing": {
		"BatchSize": 1000,
		"MaxParallelTasks": 4,
		"ErrorRetentionDays": 30
	}
}
